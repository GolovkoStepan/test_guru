<div style="border: 2px solid black; padding: 10px; width: 300px; margin-bottom: 10px;  border-radius: 7px;">
  <p><%= Answer.human_attribute_name('id') %> <%= answer.id %></p>
  <p><%= Answer.human_attribute_name('body') %> <%= answer.body %></p>
  <p><%= Answer.human_attribute_name('correct') %> <%= answer.correct %></p>
  <%= link_to t('links.edit'), edit_admin_answer_path(answer) %>
  <%= link_to t('links.destroy'), admin_answer_path(answer), method: :delete, data: { confirm: t('messages.destroy') } %>
</div>
