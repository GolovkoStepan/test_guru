<%= simple_form_for [:admin, @question, @answer] do |f| %>
  <div class="form-group">
    <%= f.input :body, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.input :correct, class: 'form-control' %>
  </div>

  <%= f.button :submit, t('links.save'), class: 'btn btn-primary btn-block' %>
<% end %>
