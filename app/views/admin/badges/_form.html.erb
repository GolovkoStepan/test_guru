<%= simple_form_for [:admin, @badge] do |f| %>
  <div class="form-group">
    <%= f.input :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.input :image %>
  </div>

  <div class="form-group">
    <%= f.input :rule, collection: badge_rules, label_method: :second, value_method: :first%>
  </div>

  <div class="form-group">
    <%= f.input :rule_value %>
  </div>

  <%= f.button :submit, t('links.save'), class: 'btn btn-primary btn-block' %>
<% end %>
