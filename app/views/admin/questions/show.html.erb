<div class="p-4"></div>

<div class="row">
  <div class="col-lg-8 offset-lg-2">
    <h3><p><%= Question.human_attribute_name('body') %>: <%= @question.body %></p></h3>

    <hr>

    <%= link_to t('links.edit'), edit_admin_question_path(@question) %>
    <%= link_to t('links.destroy'), admin_question_path(@question), method: :delete, data: { confirm: t('messages.destroy') } %>

    <hr>

    <p><%= link_to t('links.create_answer'), new_admin_question_answer_path(@question), class: 'btn btn-outline-primary' %></p>

    <%= render @question.answers %>

    <hr>

    <%= link_to t('links.back'), admin_test_path(@question.test) %>
  </div>
</div>
