<%= simple_form_for [:admin, @test] do |f| %>
  <div class="form-group">
    <%= f.input :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.association :category, prompt: :translate %>
  </div>

  <div class="form-group">
    <%= f.input :level %>
  </div>

  <%= f.button :submit, t('links.save'), class: 'btn btn-primary btn-block' %>
<% end %>
