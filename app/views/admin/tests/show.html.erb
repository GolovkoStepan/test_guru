<h3><%= Test.human_attribute_name('title') %> <%= @test.title %></h3>
<p><%= Test.human_attribute_name('category') %> <%= @test.category.title %></p>
<p><%= Test.human_attribute_name('level') %> <%= @test.level %></p>
<div>
  <p><%= link_to t('links.edit'), edit_admin_test_path(@test) %></p>
  <p><%= link_to t('links.destroy'), admin_test_path(@test), method: :delete, data: { confirm: t('messages.destroy') } %></p>
</div>

<table>
  <%= render @test.questions %>
</table>

<p><%= link_to t('links.create_question'), new_admin_test_question_path(@test) %></p>
<p><%= link_to t('links.back'), admin_tests_path %></p>
