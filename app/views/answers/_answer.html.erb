<div style="border: 2px solid black; padding: 10px; width: 300px; margin-bottom: 10px;  border-radius: 7px;">
  <p>Answer id: <%= answer.id %></p>
  <p>Answer body: <%= answer.body %></p>
  <p>Is correct?: <%= answer.correct %></p>
  <%= link_to 'Edit', edit_answer_path(answer) %>
  <%= link_to 'Delete', answer_path(answer), method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
